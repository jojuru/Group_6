<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage
    x:Class="Mokkivaraus.VarausPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BarBackground="#f2f2f2"
    BarTextColor="Black"
    SelectedTabColor="#464b50"
    UnselectedTabColor="#f2f2f2">


    <ContentPage Title="Hae mökkejä" NavigationPage.HasNavigationBar="False">

        <!--  jakaa sivun kahtia  -->
        <Grid BackgroundColor="#f7f7f8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!--  sivun vasen puoli, filterit ja haku  -->
            <VerticalStackLayout
                Grid.Column="0"
                Margin="60,30"
                BackgroundColor="#f7f7f8">
                <Label
                    FontSize="30"
                    Text="Syötä toiveet"
                    TextColor="Black" />

                <!--  MÖKKI NIMI JA ALUE  -->
                <HorizontalStackLayout Margin="0,10" Spacing="48">
                    <Border
                        Stroke="#9dabc4"
                        StrokeShape="RoundRectangle 3,3,3,3"
                        StrokeThickness="3">
                        <Entry
                            BackgroundColor="#e5e9f0"
                            FontSize="20"
                            Placeholder="Mökin nimi"
                            TextColor="Black"
                            WidthRequest="200" />


                    </Border>
                    <Border
                        BackgroundColor="#e5e9f0"
                        Stroke="#9dabc4"
                        StrokeShape="RoundRectangle 3,3,3,3"
                        StrokeThickness="3">
                        <Picker
                            x:Name="AlueListaLv"
                            Title="Valitse Alue"
                            Background="Transparent"
                            BackgroundColor="Transparent"
                            FontSize="20"
                            HeightRequest="80"
                            ItemDisplayBinding="{Binding nimi}"
                            ItemsSource="{Binding AlueCollection}"
                            SelectedIndex="0"
                            SelectedItem="Alue"
                            TextColor="Black"
                            TitleColor="Black"
                            WidthRequest="400" />
                    </Border>
                </HorizontalStackLayout>

                <!--  SAAPUMINEN-LÄHTÖ  -->
                <HorizontalStackLayout Padding="5" Spacing="125">
                    <Label
                        FontSize="20"
                        Text="Saapuminen"
                        TextColor="Black" />
                    <Label
                        FontSize="20"
                        Text="Lähtö"
                        TextColor="Black" />
                </HorizontalStackLayout>
                <HorizontalStackLayout
                    Margin="27,5"
                    Padding="5"
                    Spacing="120">
                    <Border
                        BackgroundColor="#e5e9f0"
                        Scale="1.5"
                        Stroke="#9dabc4"
                        StrokeShape="RoundRectangle 3,3,3,3"
                        StrokeThickness="2">
                        <DatePicker
                            BackgroundColor="Transparent"
                            Scale="1.5"
                            TextColor="Black" />
                    </Border>
                    <Border
                        BackgroundColor="#e5e9f0"
                        Scale="1.5"
                        Stroke="#9dabc4"
                        StrokeShape="RoundRectangle 3,3,3,3"
                        StrokeThickness="2">
                        <DatePicker
                            BackgroundColor="Transparent"
                            Scale="1.5"
                            TextColor="Black" />
                    </Border>

                </HorizontalStackLayout>


                <!--  HINTA  -->
                <Label
                    Margin="0,15"
                    FontSize="26"
                    Text="Hinta"
                    TextColor="Black" />

                <HorizontalStackLayout Spacing="20">
                    <Border
                        Stroke="#9dabc4"
                        StrokeShape="RoundRectangle 3,3,3,3"
                        StrokeThickness="3">
                        <Entry
                            BackgroundColor="#e5e9f0"
                            FontSize="20"
                            HeightRequest="66"
                            Placeholder="min. hinta"
                            TextColor="Black"
                            WidthRequest="150" />
                    </Border>
                    <Border
                        Stroke="#9dabc4"
                        StrokeShape="RoundRectangle 3,3,3,3"
                        StrokeThickness="3">
                        <Entry
                            BackgroundColor="#e5e9f0"
                            FontSize="20"
                            Placeholder="max. hinta"
                            TextColor="Black"
                            WidthRequest="150" />
                    </Border>
                </HorizontalStackLayout>

                <!--  PALVELUT  -->
                <Label
                    Margin="0,20"
                    FontSize="26"
                    Text="Palvelut"
                    TextColor="Black" />

                <HorizontalStackLayout Spacing="20">
                    <CheckBox Scale="1.5" />
                    <Label
                        Padding="0,0,25,0"
                        FontSize="18"
                        Text="Porosafari"
                        TextColor="Black"
                        VerticalOptions="Center" />
                    <CheckBox Scale="1.5" />
                    <Label
                        FontSize="18"
                        Text="Airsoftaus"
                        TextColor="Black"
                        VerticalOptions="Center" />

                </HorizontalStackLayout>
                <HorizontalStackLayout Margin="0,10" Spacing="20">
                    <CheckBox Scale="1.5" />
                    <Label
                        FontSize="18"
                        Text="Vesiskootteri"
                        TextColor="Black"
                        VerticalOptions="Center" />
                    <CheckBox Scale="1.5" />
                    <Label
                        FontSize="18"
                        Text="Hevosajelu"
                        TextColor="Black"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="20">
                    <CheckBox Scale="1.5" />
                    <Label
                        FontSize="18"
                        Text="Koiravaljakkoajelu"
                        TextColor="Black"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>

                <!--  VARUSTELUTASO  -->
                <Label
                    Margin="0,20"
                    FontSize="26"
                    Text="Varustelutaso"
                    TextColor="Black" />

                <HorizontalStackLayout Spacing="20">
                    <CheckBox Scale="1.5" Style="{StaticResource CustomCheckBoxStyle}" />
                    <Label
                        Margin="20,0"
                        FontSize="18"
                        Text="TV"
                        TextColor="Black"
                        VerticalOptions="Center" />
                    <CheckBox Scale="1.5" />
                    <Label
                        FontSize="18"
                        Text="Astianpesukone"
                        TextColor="Black"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>
                <HorizontalStackLayout Margin="0,10" Spacing="20">
                    <CheckBox Scale="1.5" />
                    <Label
                        Padding="2,0"
                        FontSize="18"
                        Text="Sauna"
                        TextColor="Black"
                        VerticalOptions="Center" />
                    <CheckBox Scale="1.5" />
                    <Label
                        FontSize="18"
                        Text="Takka"
                        TextColor="Black"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>
                <HorizontalStackLayout Spacing="20">
                    <CheckBox Scale="1.5" />
                    <Label
                        FontSize="18"
                        Text="Pyykinpesukone"
                        TextColor="Black"
                        VerticalOptions="Center" />
                </HorizontalStackLayout>

            </VerticalStackLayout>

            <!--  sivun oikea puoli, mökit  -->
            <ScrollView
                Grid.Column="1"
                BackgroundColor="#f2f2f2"
                VerticalScrollBarVisibility="Never">
                <StackLayout Margin="2" BackgroundColor="#f2f2f2">
                    <!--  lisätään mökit tänne  -->
                    <CollectionView
                        x:Name="MokkiListaLv"
                        BackgroundColor="#f2f2f2"
                        ItemsLayout="VerticalGrid, 3"
                        ItemsSource="{Binding MokkiCollection}"
                        VerticalScrollBarVisibility="Never">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <StackLayout>
                                    <Border
                                        x:Name="mokkiBorder"
                                        HeightRequest="400"
                                        Stroke="Transparent"
                                        StrokeShape="RoundRectangle 6,6,6,6"
                                        StrokeThickness="1"
                                        WidthRequest="290">
                                        <StackLayout Padding="10" BackgroundColor="White">

                                            <Border Stroke="Transparent" StrokeShape="RoundRectangle 8,8,8,8">
                                                <Image Source="vuori.jpg" />
                                            </Border>

                                            <Label Text="{Binding mokkinimi}" TextColor="Black" />

                                            <Label Text="{Binding henkilomaara}" TextColor="Black" />

                                            <Label Text="{Binding hinta}" TextColor="Red" />

                                            <Button
                                                BackgroundColor="Red"
                                                FontSize="15"
                                                Text="TUTUSTU JA VARAA"
                                                TextColor="White" />

                                        </StackLayout>
                                    </Border>
                                    <BoxView HeightRequest="30" Color="Transparent" />
                                </StackLayout>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>
            </ScrollView>
        </Grid>
    </ContentPage>
    <ContentPage
        Title="Hae varauksia"
        BackgroundColor="#f2f2f2"
        NavigationPage.HasNavigationBar="False" />
    <ContentPage />
</TabbedPage>