<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Mokkivaraus.VarausPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title=""
    NavigationPage.HasNavigationBar="False">


    <!--  jakaa sivun kahtia  -->
    <Grid BackgroundColor="#303030">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  sivun vasen puoli, filterit ja haku  -->
        <VerticalStackLayout Grid.Column="0">
            <Label
                Margin="20"
                FontSize="40"
                Text="Mökkivaraus" />

            <Label
                Margin="20"
                FontSize="26"
                Text="Hae mökkiä" />

            <HorizontalStackLayout Margin="10" Padding="5">
                <Entry
                    FontSize="20"
                    Placeholder="Alue"
                    WidthRequest="200" />
                <Entry
                    FontSize="20"
                    Placeholder="Mökin nimi"
                    WidthRequest="200" />
            </HorizontalStackLayout>

            <HorizontalStackLayout Margin="10" Padding="5">
                <Entry
                    FontSize="20"
                    Placeholder="Alkupäivä"
                    WidthRequest="200" />
                <Entry
                    FontSize="20"
                    Placeholder="Loppupäivä"
                    WidthRequest="200" />
            </HorizontalStackLayout>

            <Label
                Margin="20,40,20,0"
                FontSize="26"
                Text="Hinta" />

            <HorizontalStackLayout Margin="10" Padding="5">
                <Entry
                    FontSize="20"
                    Placeholder="min. hinta"
                    WidthRequest="150" />
                <Entry
                    FontSize="20"
                    Placeholder="max. hinta"
                    WidthRequest="150" />
            </HorizontalStackLayout>

            <Label
                Margin="20,40,20,0"
                FontSize="26"
                Text="Palvelut" />

            <FlexLayout Margin="10" Padding="5">
                <CheckBox />
                <Label
                    FontSize="18"
                    Text="Porosafari"
                    VerticalOptions="Center" />
                <CheckBox />
                <Label
                    FontSize="18"
                    Text="Airsoftaus"
                    VerticalOptions="Center" />
                <CheckBox />
                <Label
                    FontSize="18"
                    Text="Koiravaljakkoajelu"
                    VerticalOptions="Center" />

            </FlexLayout>
            <FlexLayout Margin="10" Padding="5">
                <CheckBox />
                <Label
                    FontSize="18"
                    Text="Vesiskootteri"
                    VerticalOptions="Center" />
                <CheckBox />
                <Label
                    FontSize="18"
                    Text="Hevosajelu"
                    VerticalOptions="Center" />
            </FlexLayout>

            <Label
                Margin="20,40,20,0"
                FontSize="26"
                Text="Varustelutaso" />

            <FlexLayout Margin="10" Padding="5">
                <CheckBox />
                <Label
                    FontSize="18"
                    Text="TV"
                    VerticalOptions="Center" />
                <CheckBox />
                <Label
                    FontSize="18"
                    Text="Astianpesukone"
                    VerticalOptions="Center" />
                <CheckBox />
                <Label
                    FontSize="18"
                    Text="Pyykinpesukone"
                    VerticalOptions="Center" />
            </FlexLayout>
            <FlexLayout Margin="10" Padding="5">
                <CheckBox />
                <Label
                    FontSize="18"
                    Text="Sauna"
                    VerticalOptions="Center" />
                <CheckBox />
                <Label
                    FontSize="18"
                    Text="Takka"
                    VerticalOptions="Center" />
            </FlexLayout>

        </VerticalStackLayout>

        <!--  sivun oikea puoli, mökit  -->
        <ScrollView Grid.Column="1">
            <FlexLayout
                Padding="20"
                BackgroundColor="#303030"
                Wrap="Wrap">
                <!--  lisätään mökit tänne  -->
                <CollectionView ItemsSource="{Binding MokkiList}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border
                                x:Name="mokkiBorder"
                                Padding="7"
                                BackgroundColor="#303030"
                                HeightRequest="300"
                                Stroke="black"
                                StrokeShape="RoundRectangle 20,20,20,20"
                                StrokeThickness="4"
                                WidthRequest="200">
                                <StackLayout Padding="20" BackgroundColor="#303030">
                                    <Label Text="{Binding Nimi}" />

                                    <Label Text="{Binding HenkiloCount}" />

                                    <Label Text="{Binding Hinta}" />

                                </StackLayout>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </FlexLayout>
        </ScrollView>
    </Grid>
</ContentPage>