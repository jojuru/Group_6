<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage
    x:Class="Mokkivaraus.HallintaPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Hallinta"
    Style="{StaticResource TabbedPageStyle}">

    <!--  Asiakkuudet  -->
    <ContentPage Title="Asiakkuudet" NavigationPage.HasNavigationBar="False">
        <Grid BackgroundColor="#f7f7f8" ColumnDefinitions="2*,3*">
            <!--  vasen puoli  -->
            <VerticalStackLayout
                Grid.Column="0"
                Margin="60,30"
                BackgroundColor="#f7f7f8">
                <Label
                    x:Name="AsiakkuusLbl"
                    FontSize="50"
                    Text="Hae/luo asiakkuus"
                    TextColor="Grey" />

                <HorizontalStackLayout Margin="0,10" Spacing="20">
                    <Border
                        x:Name="asiakasIdBorder"
                        IsVisible="true"
                        Stroke="#9dabc4"
                        StrokeShape="RoundRectangle 3,3,3,3"
                        StrokeThickness="3">
                        <Entry
                            x:Name="AsiakkuusIdEnt"
                            BackgroundColor="#e5e9f0"
                            FontSize="20"
                            HeightRequest="60"
                            Placeholder="Asiakas ID"
                            TextColor="Black"
                            WidthRequest="250" />
                    </Border>

                </HorizontalStackLayout>
                <HorizontalStackLayout Margin="0,10" Spacing="20">
                    <Border
                        Stroke="#9dabc4"
                        StrokeShape="RoundRectangle 3,3,3,3"
                        StrokeThickness="3">
                        <Entry
                            x:Name="AsiakkuusEtunimiEnt"
                            BackgroundColor="#e5e9f0"
                            FontSize="20"
                            HeightRequest="60"
                            Placeholder="Etunimi"
                            TextColor="Black"
                            WidthRequest="250" />
                    </Border>
                    <Border
                        Stroke="#9dabc4"
                        StrokeShape="RoundRectangle 3,3,3,3"
                        StrokeThickness="3">
                        <Entry
                            x:Name="AsiakkuusSukunimiEnt"
                            BackgroundColor="#e5e9f0"
                            FontSize="20"
                            HeightRequest="60"
                            Placeholder="Sukunimi"
                            TextColor="Black"
                            WidthRequest="250" />
                    </Border>
                </HorizontalStackLayout>
                <HorizontalStackLayout Margin="0,10" Spacing="20">
                    <Border
                        Stroke="#9dabc4"
                        StrokeShape="RoundRectangle 3,3,3,3"
                        StrokeThickness="3">
                        <Entry
                            x:Name="AsiakkuusLahiosoiteEnt"
                            BackgroundColor="#e5e9f0"
                            FontSize="20"
                            HeightRequest="60"
                            Placeholder="Lähiosoite"
                            TextColor="Black"
                            WidthRequest="250" />
                    </Border>
                    <Border
                        Stroke="#9dabc4"
                        StrokeShape="RoundRectangle 3,3,3,3"
                        StrokeThickness="3">
                        <Entry
                            x:Name="AsiakkuusPostinroEnt"
                            BackgroundColor="#e5e9f0"
                            FontSize="20"
                            HeightRequest="60"
                            Placeholder="Postinumero"
                            TextColor="Black"
                            WidthRequest="250" />
                    </Border>
                </HorizontalStackLayout>
                <HorizontalStackLayout Margin="0,10" Spacing="20">
                    <Border
                        Stroke="#9dabc4"
                        StrokeShape="RoundRectangle 3,3,3,3"
                        StrokeThickness="3">
                        <Entry
                            x:Name="AsiakkuusPuhelinnroEnt"
                            BackgroundColor="#e5e9f0"
                            FontSize="20"
                            HeightRequest="60"
                            Placeholder="Puhelinnumero"
                            TextColor="Black"
                            WidthRequest="250" />
                    </Border>
                    <Border
                        Stroke="#9dabc4"
                        StrokeShape="RoundRectangle 3,3,3,3"
                        StrokeThickness="3">
                        <Entry
                            x:Name="AsiakkuusEmailEnt"
                            BackgroundColor="#e5e9f0"
                            FontSize="20"
                            HeightRequest="60"
                            Placeholder="Sähköposti"
                            TextColor="Black"
                            WidthRequest="250" />
                    </Border>
                </HorizontalStackLayout>
                <HorizontalStackLayout x:Name="asiakasListaHorizontal" IsVisible="false">
                    <VerticalStackLayout>
                        <Label FontSize="20" Text="Asiakkaan nimi:" />
                        <Border
                            Stroke="#585A5C"
                            StrokeShape="RoundRectangle 3,3,3,3"
                            StrokeThickness="3">
                            <Entry
                                x:Name="asiakasNimiEntry"
                                BackgroundColor="#DEE1E6"
                                FontSize="20"
                                HeightRequest="60"
                                IsReadOnly="True"
                                Placeholder="Asiakkaan nimi"
                                TextColor="Black"
                                WidthRequest="250" />
                        </Border>
                    </VerticalStackLayout>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="13">
                    <Button
                        x:Name="AsiakkuusHaeBtn"
                        Margin="0,15"
                        BackgroundColor="#DEE1E6"
                        BorderColor="Black"
                        BorderWidth="2"
                        Clicked="AsiakkuusHaeBtn_Clicked"
                        FontSize="20"
                        HorizontalOptions="Start"
                        Text="Hae asiakasta"
                        TextColor="Black"
                        WidthRequest="255" />
                    <Button
                        x:Name="AsiakkuusLuoBtn"
                        Margin="0,15"
                        BackgroundColor="#DEE1E6"
                        BorderColor="Black"
                        BorderWidth="2"
                        Clicked="AsiakkuusLuoBtn_Clicked"
                        FontSize="20"
                        HorizontalOptions="Start"
                        Text="Luo uusi asiakas"
                        TextColor="Black"
                        WidthRequest="255" />
                </HorizontalStackLayout>
                <!--  Asiakas muokkaus  -->
                <HorizontalStackLayout Spacing="13">
                    <Button
                        x:Name="AsiakkuusHyvaksyMuutosBtn"
                        Margin="0,15"
                        BackgroundColor="#77DD77"
                        BorderColor="Black"
                        BorderWidth="2"
                        Clicked="AsiakkuusHyvaksyMuutosBtn_Clicked"
                        FontSize="20"
                        HorizontalOptions="Start"
                        IsVisible="false"
                        Text="Tallenna muutos"
                        TextColor="Black"
                        WidthRequest="255" />
                    <Button
                        x:Name="AsiakkuusHylkaaMuutosBtn"
                        Margin="0,15"
                        BackgroundColor="#DEE1E6"
                        BorderColor="Black"
                        BorderWidth="2"
                        Clicked="AsiakkuusHylkaaMuutosBtn_Clicked"
                        FontSize="20"
                        HorizontalOptions="Start"
                        IsVisible="false"
                        Text="Hylkää"
                        TextColor="Black"
                        WidthRequest="255" />
                </HorizontalStackLayout>

                <Button
                    x:Name="AsiakkuusPoistaBtn"
                    BackgroundColor="#FF6961"
                    BorderColor="Black"
                    BorderWidth="2"
                    Clicked="AsiakkuusPoistaBtn_Clicked"
                    FontSize="20"
                    HorizontalOptions="Start"
                    IsVisible="false"
                    Text="Poista asiakas"
                    TextColor="Black"
                    WidthRequest="255" />

            </VerticalStackLayout>

            <!--  oikea puoli  -->
            <ScrollView Grid.Column="1" BackgroundColor="#f2f2f2">
                <StackLayout>
                    <Label
                        Padding="2"
                        FontSize="32"
                        HorizontalOptions="Center"
                        Text="Asiakas ID | Nimi | Postinumero | Puhelinnumero | Sähköposti"
                        TextColor="Black" />
                    <!--  Asiakas lista  -->
                    <ListView
                        x:Name="AsiakasListaLv"
                        BackgroundColor="#f2f2f2"
                        HorizontalOptions="Center"
                        ItemSelected="AsiakkuusOnItemSelected"
                        VerticalScrollBarVisibility="Never"
                        WidthRequest="1000">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Border
                                        Margin="7"
                                        BackgroundColor="White"
                                        HeightRequest="57"
                                        Stroke="#9dabc4"
                                        StrokeShape="RoundRectangle 6,6,6,6"
                                        StrokeThickness="2">
                                        <StackLayout
                                            Padding="5,0"
                                            HorizontalOptions="Start"
                                            Orientation="Horizontal">
                                            <Label
                                                Padding="2"
                                                FontSize="20"
                                                Text="{Binding asiakas_id, StringFormat='{0} |'}"
                                                TextColor="Black"
                                                VerticalOptions="Center" />
                                            <Label
                                                Padding="2"
                                                FontSize="20"
                                                Text="{Binding etunimi}"
                                                TextColor="Black"
                                                VerticalOptions="Center" />
                                            <Label
                                                Padding="2"
                                                FontSize="20"
                                                Text="{Binding sukunimi, StringFormat='{0} |'}"
                                                TextColor="Black"
                                                VerticalOptions="Center" />
                                            <Label
                                                Padding="2"
                                                FontSize="20"
                                                Text="{Binding postinnro, StringFormat='{0} |'}"
                                                TextColor="Black"
                                                VerticalOptions="Center" />
                                            <Label
                                                Padding="2"
                                                FontSize="20"
                                                Text="{Binding puhelinnro, StringFormat='{0} |'}"
                                                TextColor="Black"
                                                VerticalOptions="Center" />
                                            <Label
                                                Padding="2"
                                                FontSize="20"
                                                Text="{Binding email}"
                                                TextColor="Black"
                                                VerticalOptions="Center" />
                                            <BoxView HorizontalOptions="FillAndExpand" Color="Transparent" />
                                        </StackLayout>

                                    </Border>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!--  More content can be added here  -->
                </StackLayout>
            </ScrollView>

        </Grid>
    </ContentPage>

    <!--  Alue  -->
    <ContentPage Title="Alue" NavigationPage.HasNavigationBar="False">
        <Grid BackgroundColor="#f7f7f8" ColumnDefinitions="2*,3*">
            <!--  vasen puoli  -->
            <VerticalStackLayout
                Grid.Column="0"
                Margin="60,30"
                BackgroundColor="#f7f7f8">
                <Label
                    x:Name="AlueLbl"
                    FontSize="50"
                    Text="Hae/luo alue"
                    TextColor="Grey" />

                <HorizontalStackLayout Margin="0,10" Spacing="20">
                    <Border
                        x:Name="alueIdBorder"
                        IsVisible="true"
                        Stroke="#9dabc4"
                        StrokeShape="RoundRectangle 3,3,3,3"
                        StrokeThickness="3">
                        <Entry
                            x:Name="AlueIdEnt"
                            BackgroundColor="#e5e9f0"
                            FontSize="20"
                            HeightRequest="60"
                            Placeholder="Alue ID"
                            TextColor="Black"
                            WidthRequest="250" />
                    </Border>
                </HorizontalStackLayout>

                <HorizontalStackLayout Margin="0,10" Spacing="20">
                    <Border
                        Stroke="#9dabc4"
                        StrokeShape="RoundRectangle 3,3,3,3"
                        StrokeThickness="3">
                        <Entry
                            x:Name="AlueNimiEnt"
                            BackgroundColor="#e5e9f0"
                            FontSize="20"
                            HeightRequest="60"
                            Placeholder="Alueen nimi"
                            TextColor="Black"
                            WidthRequest="250" />
                    </Border>
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="13">
                    <Button
                        x:Name="AlueLuoBtn"
                        Margin="0,15"
                        BackgroundColor="#DEE1E6"
                        BorderColor="Black"
                        BorderWidth="2"
                        Clicked="AlueLuoBtn_Clicked"
                        FontSize="20"
                        HorizontalOptions="Start"
                        Text="Luo uusi alue"
                        TextColor="Black"
                        WidthRequest="255" />
                    <Button
                        x:Name="AlueHaeBtn"
                        Margin="0,15"
                        BackgroundColor="#DEE1E6"
                        BorderColor="Black"
                        BorderWidth="2"
                        Clicked="AlueHaeBtn_Clicked"
                        FontSize="20"
                        HorizontalOptions="Start"
                        Text="Hae alue"
                        TextColor="Black"
                        WidthRequest="255" />
                </HorizontalStackLayout>
                <!--  Alue muokkaus  -->
                <HorizontalStackLayout Spacing="13">
                    <Button
                        x:Name="AlueHyvaksyMuutosBtn"
                        Margin="0,15"
                        BackgroundColor="#77DD77"
                        BorderColor="Black"
                        BorderWidth="2"
                        Clicked="AlueHyvaksyMuutosBtn_Clicked"
                        FontSize="20"
                        HorizontalOptions="Start"
                        IsVisible="false"
                        Text="Tallenna muutos"
                        TextColor="Black"
                        WidthRequest="255" />
                    <Button
                        x:Name="AlueHylkaaMuutosBtn"
                        Margin="0,15"
                        BackgroundColor="#DEE1E6"
                        BorderColor="Black"
                        BorderWidth="2"
                        Clicked="AlueHylkaaMuutosBtn_Clicked"
                        FontSize="20"
                        HorizontalOptions="Start"
                        IsVisible="false"
                        Text="Hylkää"
                        TextColor="Black"
                        WidthRequest="255" />
                </HorizontalStackLayout>

                <Button
                    x:Name="AluePoistaBtn"
                    BackgroundColor="#FF6961"
                    BorderColor="Black"
                    BorderWidth="2"
                    Clicked="AluePoistaBtn_Clicked"
                    FontSize="20"
                    HorizontalOptions="Start"
                    IsVisible="false"
                    Text="Poista alue"
                    TextColor="Black"
                    WidthRequest="255" />

            </VerticalStackLayout>

            <!--  oikea puoli  -->
            <ScrollView Grid.Column="1" BackgroundColor="#f2f2f2">
                <StackLayout>
                    <Label
                        Padding="2"
                        FontSize="32"
                        HorizontalOptions="Center"
                        Text="Alue ID | Alueen nimi"
                        TextColor="Black" />
                    <!--  Alue lista  -->
                    <ListView
                        x:Name="AlueListaLv"
                        BackgroundColor="#f2f2f2"
                        HorizontalOptions="Center"
                        ItemSelected="AlueOnItemSelected"
                        VerticalScrollBarVisibility="Never"
                        WidthRequest="1000">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Border
                                        Margin="7"
                                        BackgroundColor="White"
                                        HeightRequest="57"
                                        Stroke="#9dabc4"
                                        StrokeShape="RoundRectangle 6,6,6,6"
                                        StrokeThickness="2">
                                        <StackLayout
                                            Padding="5,0"
                                            HorizontalOptions="Start"
                                            Orientation="Horizontal">
                                            <Label
                                                Padding="2"
                                                FontSize="20"
                                                Text="{Binding alue_id, StringFormat='{0} |'}"
                                                TextColor="Black"
                                                VerticalOptions="Center" />
                                            <Label
                                                Padding="2"
                                                FontSize="20"
                                                Text="{Binding nimi}"
                                                TextColor="Black"
                                                VerticalOptions="Center" />
                                            <BoxView HorizontalOptions="FillAndExpand" Color="Transparent" />
                                        </StackLayout>

                                    </Border>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
                <!--  More content can be added here  -->
            </ScrollView>
        </Grid>
    </ContentPage>

    <!--  Mökki  -->
    <ContentPage Title="Mökki" NavigationPage.HasNavigationBar="False">
        <Grid BackgroundColor="#f7f7f8" ColumnDefinitions="2*,3*">
            <!--  vasen puoli  -->
            <VerticalStackLayout
                Grid.Column="0"
                Margin="60,30"
                BackgroundColor="#f7f7f8">
                <Label
                    x:Name="MokkiLbl"
                    FontSize="50"
                    Text="Hae/luo mökki"
                    TextColor="Grey" />

                <HorizontalStackLayout Margin="0,10" Spacing="20">
                    <Border
                        IsVisible="true"
                        Stroke="#9dabc4"
                        StrokeShape="RoundRectangle 3,3,3,3"
                        StrokeThickness="3">
                        <Entry
                            x:Name="MokkiMokkiidEnt"
                            BackgroundColor="#e5e9f0"
                            FontSize="20"
                            HeightRequest="60"
                            Placeholder="Mökki ID"
                            TextColor="Black"
                            WidthRequest="250" />
                    </Border>
                    <Border
                        Stroke="#9dabc4"
                        StrokeShape="RoundRectangle 3,3,3,3"
                        StrokeThickness="3">
                        <Entry
                            x:Name="MokkiMokkinimiEnt"
                            BackgroundColor="#e5e9f0"
                            FontSize="20"
                            HeightRequest="60"
                            Placeholder="Mökin nimi"
                            TextColor="Black"
                            WidthRequest="250" />
                    </Border>
                </HorizontalStackLayout>
                <HorizontalStackLayout Margin="0,10" Spacing="20">
                    <Border
                        Stroke="#9dabc4"
                        StrokeShape="RoundRectangle 3,3,3,3"
                        StrokeThickness="3">
                        <Entry
                            x:Name="MokkiAlueEnt"
                            BackgroundColor="#e5e9f0"
                            FontSize="20"
                            HeightRequest="60"
                            Placeholder="Alue"
                            TextColor="Black"
                            WidthRequest="250" />
                    </Border>
                    <Border
                        Stroke="#9dabc4"
                        StrokeShape="RoundRectangle 3,3,3,3"
                        StrokeThickness="3">
                        <Entry
                            x:Name="MokkiKatuosoiteEnt"
                            BackgroundColor="#e5e9f0"
                            FontSize="20"
                            HeightRequest="60"
                            Placeholder="Katuosoite"
                            TextColor="Black"
                            WidthRequest="250" />
                    </Border>
                </HorizontalStackLayout>
                <HorizontalStackLayout Margin="0,10" Spacing="20">
                    <Border
                        Stroke="#9dabc4"
                        StrokeShape="RoundRectangle 3,3,3,3"
                        StrokeThickness="3">
                        <Entry
                            x:Name="MokkiPostinroEnt"
                            BackgroundColor="#e5e9f0"
                            FontSize="20"
                            HeightRequest="60"
                            Placeholder="Postinumero"
                            TextColor="Black"
                            WidthRequest="250" />
                    </Border>
                    <Border
                        Stroke="#9dabc4"
                        StrokeShape="RoundRectangle 3,3,3,3"
                        StrokeThickness="3">
                        <Entry
                            x:Name="MokkiHintaEnt"
                            BackgroundColor="#e5e9f0"
                            FontSize="20"
                            HeightRequest="60"
                            Placeholder="Hinta €"
                            TextColor="Black"
                            WidthRequest="250" />
                    </Border>
                </HorizontalStackLayout>
                <HorizontalStackLayout Margin="0,10" Spacing="20">
                    <Border
                        Stroke="#9dabc4"
                        StrokeShape="RoundRectangle 3,3,3,3"
                        StrokeThickness="3">
                        <Entry
                            x:Name="MokkiHenkilomaaraEnt"
                            BackgroundColor="#e5e9f0"
                            FontSize="20"
                            HeightRequest="60"
                            Placeholder="Henkilömäärä"
                            TextColor="Black"
                            WidthRequest="250" />
                    </Border>
                </HorizontalStackLayout>
                <HorizontalStackLayout Margin="0,10" Spacing="20">
                    <Border
                        Stroke="#9dabc4"
                        StrokeShape="RoundRectangle 3,3,3,3"
                        StrokeThickness="3">
                        <Entry
                            x:Name="MokkiKuvausEnt"
                            BackgroundColor="#e5e9f0"
                            FontSize="20"
                            HeightRequest="60"
                            Placeholder="Kuvaus"
                            TextColor="Black"
                            WidthRequest="525" />
                    </Border>
                </HorizontalStackLayout>
                <HorizontalStackLayout Margin="0,10" Spacing="20">

                    <Picker
                        x:Name="MokkiImagePicker"
                        Title="Valitse Kuva"
                        BackgroundColor="#DEE1E6"
                        FontSize="20"
                        HorizontalOptions="StartAndExpand"
                        SelectedIndexChanged="MokkiImagePicker_SelectedIndexChanged"
                        SelectedItem="mokki1.jpg"
                        TextColor="Black"
                        TitleColor="Black"
                        VerticalOptions="StartAndExpand"
                        WidthRequest="250" />

                    <Border Stroke="Transparent" StrokeShape="RoundRectangle 8,8,8,8">
                        <Image
                            x:Name="MokkiImg"
                            HeightRequest="173"
                            Source="mokki1.jpg" />
                    </Border>
                </HorizontalStackLayout>

                <Label
                    FontAttributes="Bold"
                    FontSize="20"
                    Text="Varustelu"
                    VerticalOptions="Center" />
                <HorizontalStackLayout>
                    <Label
                        FontAttributes="Bold"
                        FontSize="17"
                        Text="TV"
                        VerticalOptions="Center" />
                    <CheckBox x:Name="VarusteluTvCb" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="17"
                        Text="Astianpesukone"
                        VerticalOptions="Center" />
                    <CheckBox x:Name="VarusteluAstianpesukoneCb" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="17"
                        Text="Pyykinpesukone"
                        VerticalOptions="Center" />
                    <CheckBox x:Name="VarusteluPyykinpesukoneCb" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="17"
                        Text="Sauna"
                        VerticalOptions="Center" />
                    <CheckBox x:Name="VarusteluSaunaCb" />
                    <Label
                        FontAttributes="Bold"
                        FontSize="17"
                        Text="Takka"
                        VerticalOptions="Center" />
                    <CheckBox x:Name="VarusteluTakkaCb" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="13">
                    <Button
                        x:Name="MokkiHaeBtn"
                        Margin="0,15"
                        BackgroundColor="#DEE1E6"
                        BorderColor="Black"
                        BorderWidth="2"
                        Clicked="MokkiHaeBtn_Clicked"
                        FontSize="20"
                        HorizontalOptions="Start"
                        Text="Hae mökkiä"
                        TextColor="Black"
                        WidthRequest="255" />
                    <Button
                        x:Name="MokkiLuoBtn"
                        Margin="0,15"
                        BackgroundColor="#DEE1E6"
                        BorderColor="Black"
                        BorderWidth="2"
                        Clicked="MokkiLuoBtn_Clicked"
                        FontSize="20"
                        HorizontalOptions="Start"
                        Text="Luo uusi mökki"
                        TextColor="Black"
                        WidthRequest="255" />
                </HorizontalStackLayout>
                <!--  mökki muokkaus  -->
                <HorizontalStackLayout Spacing="13">
                    <Button
                        x:Name="MokkiHyvaksyMuutosBtn"
                        Margin="0,15"
                        BackgroundColor="#77DD77"
                        BorderColor="Black"
                        BorderWidth="2"
                        Clicked="MokkiHyvaksyMuutosBtn_Clicked"
                        FontSize="20"
                        HorizontalOptions="Start"
                        IsVisible="false"
                        Text="Tallenna muutos"
                        TextColor="Black"
                        WidthRequest="255" />
                    <Button
                        x:Name="MokkiHylkaaMuutosBtn"
                        Margin="0,15"
                        BackgroundColor="#DEE1E6"
                        BorderColor="Black"
                        BorderWidth="2"
                        Clicked="MokkiHylkaaMuutosBtn_Clicked"
                        FontSize="20"
                        HorizontalOptions="Start"
                        IsVisible="false"
                        Text="Hylkää"
                        TextColor="Black"
                        WidthRequest="255" />
                </HorizontalStackLayout>

                <Button
                    x:Name="MokkiPoistaBtn"
                    BackgroundColor="#FF6961"
                    BorderColor="Black"
                    BorderWidth="2"
                    Clicked="MokkiPoistaBtn_Clicked"
                    FontSize="20"
                    HorizontalOptions="Start"
                    IsVisible="false"
                    Text="Poista mökki"
                    TextColor="Black"
                    WidthRequest="255" />

            </VerticalStackLayout>

            <!--  oikea puoli  -->
            <ScrollView Grid.Column="1" BackgroundColor="#f2f2f2">
                <StackLayout>
                    <Label
                        Padding="2"
                        FontSize="30"
                        HorizontalOptions="Center"
                        Text="MokkiID | Nimi | Alue | Osoite | Postinumero | Hinta | Henkilömäärä | Kuvaus"
                        TextColor="Black" />
                    <!--  Mökki lista  -->
                    <ListView
                        x:Name="MokkiListaLv"
                        BackgroundColor="#f2f2f2"
                        HorizontalOptions="Center"
                        ItemSelected="MokkiOnItemSelected"
                        VerticalScrollBarVisibility="Never"
                        WidthRequest="1000">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Border
                                        Margin="7"
                                        BackgroundColor="White"
                                        HeightRequest="57"
                                        Stroke="#9dabc4"
                                        StrokeShape="RoundRectangle 6,6,6,6"
                                        StrokeThickness="2">
                                        <StackLayout
                                            Padding="5,0"
                                            HorizontalOptions="Start"
                                            Orientation="Horizontal">
                                            <Label
                                                Padding="2"
                                                FontSize="20"
                                                Text="{Binding mokki_id, StringFormat='{0} |'}"
                                                TextColor="Black"
                                                VerticalOptions="Center" />
                                            <Label
                                                Padding="2"
                                                FontSize="20"
                                                Text="{Binding mokkinimi}"
                                                TextColor="Black"
                                                VerticalOptions="Center" />
                                            <Label
                                                Padding="2"
                                                FontSize="20"
                                                Text="{Binding alue, StringFormat='{0} |'}"
                                                TextColor="Black"
                                                VerticalOptions="Center" />
                                            <Label
                                                Padding="2"
                                                FontSize="20"
                                                Text="{Binding katuosoite, StringFormat='{0} |'}"
                                                TextColor="Black"
                                                VerticalOptions="Center" />
                                            <Label
                                                Padding="2"
                                                FontSize="20"
                                                Text="{Binding postinro, StringFormat='{0} |'}"
                                                TextColor="Black"
                                                VerticalOptions="Center" />
                                            <Label
                                                Padding="2"
                                                FontSize="20"
                                                Text="{Binding hinta, StringFormat='{0} €'}"
                                                TextColor="Black"
                                                VerticalOptions="Center" />
                                            <BoxView HorizontalOptions="FillAndExpand" Color="Transparent" />
                                        </StackLayout>

                                    </Border>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
